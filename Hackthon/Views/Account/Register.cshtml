@model HackthAccountViewModelson.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "";
}
@{
    var pageName = "Cadastrar";
    ViewData["Title"] = pageName;
    Layout = "~/Views/Shared/_LayoutCadastro.cshtml";
    var tipo = Context.Request.Query["tipo"];

    if(tipo == "1")
    {
        pageName = "Empresa";
    }
    else if (tipo == "2")
    {
        pageName = "ONG";
    }
    else if (tipo == "3")
    {
        pageName = "Usu√°rio final";
    }
}

<div class="row">
    <!-- Title -->
    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa-fw fab fa-first-order"></i>@pageName
          
        </h1>
    </div>
    <!-- Coluna a Direita -->
    <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
    </div>
</div>
<section id="widget-grid" class="">
    <div class="row">
        <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fas fa-plus" aria-hidden="true"></i> Cadastro de @pageName</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label asp-for="TipoCadastro" class="control-label"></label>
                            <select asp-for="TipoCadastro" class="form-control" asp-items="ViewBag.TipoCadastro"></select>
                            <span asp-validation-for="TipoCadastro" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        @if (tipo == "1")
                        {
                            <div class="form-group">
                                <label class="control-label">CNPJ</label>
                                <input asp-for="CpfCnpj" class="form-control" />
                                <span asp-validation-for="CpfCnpj" class="text-danger"></span>
                            </div>
                        }
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input type="email" required asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="panel-footer">
                        <div class="">
                            <input type="submit" value="Cadastrar" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </article>
    </div>
</section>
